      "telegram": {
        "enabled": false,
        "botToken": "",
        "chatId": ""
      },
      "discord": {
        "enabled": false,
        "webhookUrl": ""
      }
    }
  },
  "logs": {
    "level": "INFO",
    "format": "json",
    "retentionDays": 30,
    "saveToFile": true,
    "saveToDatabase": true
  },
  "regional": {
    "preferredLanguage": "en-US",
    "alternativeLanguage": "ko",
    "quickSwitch": true
